{
  "name": "template-typescript-jest-husky-standard-prettier",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": false,
  "scripts": {
    "start": "cross-env NODE_ENV=production ",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register src/app.ts",
    "tdocs": "typedoc --out docs ./src",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "webpack --config webpack.config.ts",
    "check-updates": "ncu",
    "upgrade": "npm update --save-dev && npm update --save",
    "pkg:win": "npm run build && rimraf pkg && mkdir pkg && pkg package.json --targets node14-win-x64 --output ./pkg/server",
    "pkg:linux": "npm run build && rimraf pkg && mkdir pkg && pkg package.json --target node14-linux-x64 --output ./pkg/server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nexckycort/template-typescript-jest-husky-standard-prettier.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nexckycort/template-typescript-jest-husky-standard-prettier/issues"
  },
  "homepage": "https://github.com/nexckycort/template-typescript-jest-husky-standard-prettier#readme",
  "devDependencies": {
    "@microsoft/tsdoc": "^0.13.0",
    "@tsconfig/recommended": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-tsdoc": "^0.2.11",
    "husky": "^5.1.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-check-updates": "^11.1.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.20.27",
    "typescript": "^4.1.5",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "git-commit-msg-linter": "^3.0.0"
  }
}
